<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/basketListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/basketCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/history_detail_back">

        <ImageView
            android:id="@+id/basketProductImage"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:layerType="software" />

        <TextView
            android:id="@+id/basketProductName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/basketProductImage"


            android:text=""

            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/basketProductWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/basketProductName"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/basketProductImage"
            android:textAllCaps="false"
            android:textColor="@color/nearGray"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/basketProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/basketProductWeight"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/basketProductImage"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/mainPurple"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/basketProductAmount"
            android:layout_width="64dp"
            android:layout_height="22dp"
            android:layout_below="@+id/basketProductName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/basket_amount_button_back"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/nearGray"
            android:textSize="12sp" />


    </RelativeLayout>


    <View
        android:id="@+id/basketWrapper"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/basketCardView"
        android:layout_marginTop="15dp"

        android:background="@color/lightGray" />


</RelativeLayout>