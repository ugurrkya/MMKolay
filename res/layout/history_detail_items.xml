<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeListItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/detailCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@color/history_detail_back">

        <ImageView
            android:id="@+id/productImage"
            android:layout_width="66dp"
            android:layout_height="66dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="4dp"
            android:layerType="software"
            />

        <TextView
            android:id="@+id/productName"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:layout_toEndOf="@id/productImage"


            android:text=""

            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/productWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productName"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/productImage"
            android:textAllCaps="false"
            android:textColor="@color/nearGray"
            android:textSize="12sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productWeight"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/productImage"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/priceColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/productAmount"
            android:layout_width="64dp"
            android:layout_height="22dp"
            android:layout_below="@+id/productName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:background="@drawable/amount_button_back"
            android:text=""
            android:textAllCaps="false"
            android:textColor="@color/amount_button_stroke"
            android:textSize="12sp" />




    </RelativeLayout>


    <View
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/detailCardView"
        android:layout_marginTop="15dp"

        android:background="@color/lightGray" />


</RelativeLayout>